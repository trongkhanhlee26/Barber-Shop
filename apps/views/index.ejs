    <section class="artist_part single_page_artist">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7 col-lg-6 col-sm-10">
                    <div class="section_tittle">
                        <img src="static/img/section_tittle_icon.png" alt="icon">
                        <h2>Nhân Viên</h2>
                        <p>Những nhân viên được đánh giá cao và nhận được sự hài lòng tuyệt đối của khách hàng.</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <% if (barbers && barbers.length > 0) { %>
                    <% barbers.forEach(function(barber) { %>
                        <div class="col-sm-6 col-lg-4">
                            <div class="single_blog_item">
                                <div class="single_blog_img">
                                    <!-- Hiển thị hình ảnh của barber -->
                                    <img src="<%= barber.imageUrl ? barber.imageUrl : 'default-image-path.jpg' %>"
                                         alt="artist" style="height: 480px; width: 360px; object-fit: cover;">
                                </div>
                                <div class="single_text">
                                    <div class="single_blog_text text-center">
                                        <!-- Hiển thị tên, kinh nghiệm và dịch vụ của barber -->
                                        <h3><%= barber.userId ? barber.userId.fullname : 'Không có tên' %></h3>
                                        <p><%= barber.experience %> năm kinh nghiệm</p>
                                        <p>Chuyên môn: <%= barber.service ? barber.service.name : 'Không có chuyên môn' %></p>
                                        <div class="social_icon">
                                            <a href="https://www.facebook.com/kayak.barber?locale=vi_VN" target="_blank">
                                                <i class="ti-facebook"></i>
                                            </a>
                                            <a href="https://www.instagram.com/kayak.barber/" target="_blank">
                                                <i class="ti-instagram"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <h4>Hiện tại chưa có nhân viên nào.</h4>
                    </div>
                <% } %>
            </div>            
